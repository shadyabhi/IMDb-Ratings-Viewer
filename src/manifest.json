{
  "name": "IMDB Ratings Viewer",
  "version": "2.7",
  "description": "Shows ratings beside Movie names on Actor pages",
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://www.imdb.com/name/*",
        "https://www.imdb.com/title/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
